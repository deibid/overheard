<div class="row">
  <div class="sm-col-12">
    <div class="text-center">
      <h2> <%= session[:mood].titleize %> </h2>
      <h1> <%= @podcast.title %> </h1>
      <h2><i> <%= @podcast.author %></i> </h2> 
      <%= image_tag @podcast.cover.url(:medium), class: "image-reponsive" %> <br>
      <audio src="<%= @podcast.path %>" controls id="audio">
      <p>Your browser does not support the audio element </p>
      </audio>
      <br>
      <%= link_to "Explore again", root_path, class: "btn btn-primary" %> 
      <%= link_to "Dig deeper", podcast_path(@podcast.next), class: "btn btn-primary" %> 
    </div>
  </div>

  <script>
    $("#audio").bind("ended", function(){ alert("hello cosmo this podcast finished!!!!") });
  </script>
</div>
